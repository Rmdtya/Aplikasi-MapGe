<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".AboutUs">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#303030"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="ClickMenu"
                    android:src="@drawable/ic_menuwhite"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="Tentang Aplikasi"
                    android:fontFamily="@font/aleobold"
                    android:textColor="@color/white"/>

                <ImageView
                    android:onClick="ClickRightMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_morewhite" />

            </LinearLayout>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="54dp"
            android:background="#424242"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintVertical_bias="0.0">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title">

                <!-- ========================================================================================== -->

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="360dp"
                    android:layout_height="93dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    card_view:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#4682B4"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/g101"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shapes05"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Apa Itu MapGe"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/g102"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/g101"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingTop="3dp"
                            android:text="Sistem informasi geografis pemetaan wilayah dengan Google Maps view yang memudahkan pemerintah atau pengelola dalam mengelola sumber energi geothermal"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- ========================================================================================== -->

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="360dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    card_view:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#4682B4"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/g201"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shapes05"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Sistem Informasi Geografis (SIG)"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/g202"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/g201"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingTop="3dp"
                            android:text="Inventarisasi sumber daya alam (SDA) panas bumi dengan mengidentifikasi potensi daerah penghasil panas bumi yang tersebar di Indonesia, serta memperlihatkan wilayah yang sudah terolah dan belum terolah."
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- ========================================================================================== -->

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="360dp"
                    android:layout_height="93dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    card_view:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#4682B4"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/g301"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shapes05"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Wilayah Potensi"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/g302"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/g301"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingTop="3dp"
                            android:text="Wilayah yang berpotensi menghasilakn sumber energi panas bumi dan bisa dimanfaatkan sebagai bahan bakar Pembangkit Listrik Tenaga Panas Bumi (PLTP)."
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- ========================================================================================== -->

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="360dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    card_view:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#4682B4"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/g401"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shapes05"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Maps Style"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/g402"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/g401"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingTop="3dp"
                            android:text="MapGe menyediakan 3 jenis tampilan map yaitu Normal View, Sattelite View dan Hybrid View."
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- ========================================================================================== -->

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="360dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    card_view:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#4682B4"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/g501"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shapes05"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Navigation Button"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/g502"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/g501"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingTop="3dp"
                            android:text="Fitur yang memudahkan users untuk menemukan wilayah potensi geothermal terkait"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- ========================================================================================== -->

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="360dp"
                    android:layout_height="93dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    card_view:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#4682B4"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/g601"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shapes05"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Dashboard"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/g602"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/g601"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@font/comfortaalight"
                            android:paddingTop="3dp"
                            android:text="Tampilan yang berisi data-data daerah potensi geothermal dan filter yang membaagi ke dalam 5 daerah atau pulau besar yang ada di Indonesia"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity = "start"
        android:background="@android:color/white" >

        <include layout="@layout/main_nav_drawer_aboutus" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_gravity="end"
        android:background="#303030"
        android:layout_marginTop="55dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hubungi Kami"
                    android:fontFamily="@font/comfortaalight"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>